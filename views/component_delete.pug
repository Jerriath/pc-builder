extends layout

block content
    main
        .main-content
            header.main-header
                h1= component.name 
                p.description= msg
            section.list
                form.basic-form(action="" method="POST")
                    fieldset   
                        legend Admin Password: 
                        input(type="password" required name="password" id="password")
                    button.form-btn.choose-category(type="submit") Delete 
                    a(href="/")
                        button.form-btn.choose-category Cancel
        if (!errors == undefined) 
            each err in errors 
                li= err.msg
    include footer.pug